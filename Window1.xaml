<?xml version="1.0" encoding="utf-8"?>
<Window
	x:Class="utldlg.Window1" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title=""
	Height="100"
	Width="200"
	ResizeMode="NoResize"
	KeyDown="UserControl_KeyDown">
	<Grid>
		<StackPanel>
			<Menu
				VerticalAlignment="Top">
				<MenuItem
					Header="File(_F)"
					Name="menufile">
					<MenuItem
						Header="Execute 1(_1)..."
						Tag="1"
						Click="Execute_Click" />
					<MenuItem
						Header="Execute 2(_2)..."
						Tag="2"
						Click="Execute_Click" />
					<Separator />
					<MenuItem
						Header="Execute 3(_3)..."
						Tag="3"
						Click="Execute_Click" />
				</MenuItem>
				<MenuItem
					Header="Option(_O)"
					Name="menuoption"
					Visibility="Hidden">
					<MenuItem
						Header="Resume(_R)"
						Click="Resume_Click" />
					<MenuItem
						Header="Cancel(_C)"
						Click="Cancel_Click" />
				</MenuItem>
			</Menu>
			<Label
				Name="label"
				Height="26" />
			<ProgressBar
				Name="pbar"
				Height="18" />
		</StackPanel>
	</Grid>
</Window>
